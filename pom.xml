<project>

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.codeleaf.build</groupId>
        <artifactId>build-release</artifactId>
        <version>0.1.0</version>
    </parent>

    <groupId>io.codeleaf.release</groupId>
    <artifactId>release</artifactId>

    <packaging>pom</packaging>

    <name>Release Project</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <git.repo>${project.artifactId}</git.repo>
        <git.version>${project.version}</git.version>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <leaf-authn.version>0.1.0</leaf-authn.version>
        <leaf-build.version>0.1.0</leaf-build.version>
        <leaf-common.version>0.1.0</leaf-common.version>
        <leaf-config.version>0.1.0</leaf-config.version>
        <leaf-expose.version>0.1.0</leaf-expose.version>
        <leaf-logging.version>0.1.0</leaf-logging.version>
        <leaf-modeling.version>0.1.0</leaf-modeling.version>
        <leaf-oerm.version>0.1.0</leaf-oerm.version>
        <leaf-release.version>0.1.0</leaf-release.version>
        <leaf-service.version>0.1.0</leaf-service.version>
    </properties>

    <licenses>
        <license>
            <name>GNU General Public License, Version 3</name>
            <url>https://www.gnu.org/licenses/gpl-3.0.en.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>Deepak Shingan</name>
            <email>deepak.shingan@gmail.com</email>
            <organization>Deepak Shingan</organization>
        </developer>
        <developer>
            <name>Tom Burger</name>
            <email>tvburger@gmail.com</email>
            <organization>TVBurger B.V.</organization>
            <organizationUrl>http://www.tvburger.net/</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/codeleaf-io/${git.repo}.git</connection>
        <developerConnection>scm:git:ssh://github.com/codeleaf-io/${git.repo}.git</developerConnection>
        <url>https://github.com/codeleaf-io/${git.repo}/tree/release/${git.version}</url>
    </scm>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

</project>
